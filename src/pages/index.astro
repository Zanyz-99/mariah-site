---
import Layout from "../layouts/Layout.astro";

const slides = [
  "/projects/02 Project Two.png",
  "/projects/03 Project Three.png",
  "/projects/04 Project Four.png",
  "/projects/05 Project Five.png",
  "/projects/06 Project Six.png",
];
---

<Layout title="Home" description="">
  <section class="home">
    <div class="full-bleed">
      <div class="carousel" id="projects">
        <div class="viewport" id="viewport" tabindex="0" aria-label="Projects carousel">
          <ul class="track" id="track" aria-live="polite">
            <!-- prev | current | next -->
            <li class="card"><img id="img-prev" alt="Previous project" decoding="async" /></li>
            <li class="card is-active"><img id="img-cur" alt="Current project" decoding="async" /></li>
            <li class="card"><img id="img-next" alt="Next project" decoding="async" /></li>
          </ul>
        </div>

        <div class="inner">
          <div class="dots" id="dots" role="tablist" aria-label="Project slide navigation">
            {slides.map((_, i) => (
              <button class="dot" type="button" data-index={i} aria-label={`Go to slide ${i + 1}`} />
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <script define:vars={{ slides }}>
    const viewport = document.getElementById("viewport");
    const track = document.getElementById("track");
    const dots = document.querySelectorAll("#dots .dot");

    const imgPrev = document.getElementById("img-prev");
    const imgCur  = document.getElementById("img-cur");
    const imgNext = document.getElementById("img-next");

    const n = slides.length;
    const mod = (x) => (x % n + n) % n;

    let index = 0;
    let animating = false;

    const gapPx = () => {
      const cs = getComputedStyle(track);
      return parseFloat(cs.columnGap || cs.gap || "0") || 0;
    };

    const cardWidth = () => {
      const curCard = track.querySelectorAll(".card")[1];
      return curCard ? curCard.getBoundingClientRect().width : 0;
    };

    const step = () => cardWidth() + gapPx(); // STEP distance in px

    const setDots = () => {
      dots.forEach((d, i) => {
        if (i === index) d.setAttribute("data-active", "true");
        else d.removeAttribute("data-active");
        d.setAttribute("aria-selected", i === index ? "true" : "false");
      });
    };

    const setImages = () => {
      imgPrev.src = slides[mod(index - 1)];
      imgCur.src  = slides[index];
      imgNext.src = slides[mod(index + 1)];
      imgCur.loading = "eager";
      imgPrev.loading = "lazy";
      imgNext.loading = "lazy";
    };

    // âœ… Snap so the *middle card* is the centered "main" card
    // Track layout: [prev][gap][cur][gap][next]
    // Putting track at -STEP aligns the "cur" card into the viewport's central view.
    const snapCenter = () => {
      const s = step();
      track.style.transition = "none";
      track.style.transform = `translateX(${-s}px)`;
      track.offsetHeight; // reflow
    };

    const animateTo = (xPx, onDone) => {
      track.style.transition = "transform 320ms ease";
      track.style.transform = `translateX(${xPx}px)`;
      const handler = () => {
        track.removeEventListener("transitionend", handler);
        onDone();
      };
      track.addEventListener("transitionend", handler);
    };

    const next = () => {
      if (animating) return;
      animating = true;

      const s = step();
      // from -STEP -> -2*STEP (current slides left, next becomes centered)
      animateTo(-2 * s, () => {
        index = mod(index + 1);
        setImages();
        setDots();
        snapCenter();
        animating = false;
      });
    };

    const prev = () => {
      if (animating) return;
      animating = true;

      const s = step();
      // from -STEP -> 0 (current slides right, prev becomes centered)
      animateTo(0, () => {
        index = mod(index - 1);
        setImages();
        setDots();
        snapCenter();
        animating = false;
      });
    };

    const goTo = (t) => {
      t = mod(t);
      if (t === index || animating) return;

      // If adjacent, animate in correct direction; else jump.
      const forward = mod(t - index);
      const backward = mod(index - t);

      if (forward === 1) return next();
      if (backward === 1) return prev();

      index = t;
      setImages();
      setDots();
      snapCenter();
    };

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        const t = Number(dot.getAttribute("data-index"));
        goTo(t);
      });
    });

    // Wheel paging (both directions)
    let wheelLock = false;
    viewport.addEventListener(
      "wheel",
      (e) => {
        e.preventDefault();
        if (wheelLock || animating) return;
        wheelLock = true;

        const dominant = Math.abs(e.deltaY) >= Math.abs(e.deltaX) ? e.deltaY : e.deltaX;
        if (dominant > 0) next();
        else prev();

        setTimeout(() => (wheelLock = false), 340);
      },
      { passive: false }
    );

    // Drag / swipe
    let startX = 0;
    let dragging = false;

    viewport.addEventListener("pointerdown", (e) => {
      if (animating) return;
      dragging = true;
      startX = e.clientX;
      viewport.setPointerCapture?.(e.pointerId);
    });

    viewport.addEventListener("pointerup", (e) => {
      if (!dragging || animating) return;
      dragging = false;

      const dx = e.clientX - startX;
      const threshold = Math.min(90, viewport.clientWidth * 0.14);

      if (dx < -threshold) next();
      else if (dx > threshold) prev();
    });

    viewport.addEventListener("pointercancel", () => {
      dragging = false;
    });

    // Keyboard
    viewport.addEventListener("keydown", (e) => {
      if (animating) return;
      if (e.key === "ArrowRight") next();
      if (e.key === "ArrowLeft") prev();
    });

    // Resize: recompute STEP and re-center
    window.addEventListener("resize", () => snapCenter());

    // Init
    setImages();
    setDots();
    snapCenter();
  </script>

  <style>
    .home{
      display: grid;
      gap: 16px;
      width: 100%;
      padding-top: clamp(12px, 3vh, 28px);
      padding-bottom: clamp(18px, 4vh, 44px);
    }

    .carousel{ width: 100%; }

    .viewport{
      width: 100%;
      overflow: hidden;
      outline: none;
      touch-action: pan-y;
      box-sizing: border-box;

      /* breathing room from the edges */
      padding-inline: clamp(10px, 2vw, 18px);
    }

    .track{
      display: flex;
      align-items: center;
      gap: clamp(10px, 2vw, 18px);
      padding: 6px 0;
      will-change: transform;
    }

    .card{
      flex: 0 0 auto;

      /* Controls how much prev/next you see */
      width: clamp(300px, 68vw, 900px);

      border-radius: 16px;
      overflow: hidden;
      aspect-ratio: 16 / 9;

      background: var(--card);
      border: 1px solid var(--border);

      transform: scale(0.94);
      opacity: 0.85;
      transition: transform 200ms ease, opacity 200ms ease;
    }

    .card.is-active{
      transform: scale(1);
      opacity: 1;
    }

    .card img{
      width: 100%;
      height: 100%;
      display: block;
      object-fit: contain;
      object-position: center;
      user-select: none;
      -webkit-user-drag: none;
    }

    .dots{
      margin-top: 0.9rem;
      display: flex;
      justify-content: center;
      gap: 10px;
      width: 100%;
    }

    .dot{
      width: 10px;
      height: 10px;
      border-radius: 999px;
      border: 0;
      background: currentColor;
      opacity: 0.35;
      cursor: pointer;
      transition: transform 160ms ease, opacity 160ms ease;
      position: relative;
    }

    .dot[data-active="true"]{
      opacity: 1;
      transform: scale(1.35);
    }

    .dot::before{
      content: "";
      position: absolute;
      inset: -10px;
    }

    @media (min-width: 900px){
      .card{
        width: min(62vw, 980px);
      }
    }
  </style>
</Layout>
