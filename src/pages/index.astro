---
import Layout from "../layouts/Layout.astro";

const slides = [
  "/projects/02 Project Two.png",
  "/projects/03 Project Three.png",
  "/projects/04 Project Four.png",
  "/projects/05 Project Five.png",
  "/projects/06 Project Six.png",
];
---

<Layout title="Home" description="">
  <section class="home">
    <!-- Full-bleed carousel row (uses .full-bleed + .inner from Layout.astro) -->
    <div class="full-bleed">
      <div class="carousel" id="projects">
        <div class="viewport" id="viewport" tabindex="0" aria-label="Projects carousel">
          <ul class="track" id="track" aria-live="polite">
            <li class="card"><img id="img-prev" alt="Previous project" decoding="async" /></li>
            <li class="card is-active"><img id="img-cur" alt="Current project" decoding="async" /></li>
            <li class="card"><img id="img-next" alt="Next project" decoding="async" /></li>
          </ul>
        </div>

        <!-- dots pinned to normal content width -->
        <div class="inner">
          <div class="dots" id="dots" role="tablist" aria-label="Project slide navigation">
            {slides.map((_, i) => (
              <button class="dot" type="button" data-index={i} aria-label={`Go to slide ${i + 1}`} />
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <script define:vars={{ slides }}>
    const viewport = document.getElementById("viewport");
    const track = document.getElementById("track");
    const dots = document.querySelectorAll("#dots .dot");

    const imgPrev = document.getElementById("img-prev");
    const imgCur  = document.getElementById("img-cur");
    const imgNext = document.getElementById("img-next");

    const cards = Array.from(track.querySelectorAll(".card"));

    const n = slides.length;
    const mod = (x) => (x % n + n) % n;

    let index = 0;
    let animating = false;

    const setDots = () => {
      dots.forEach((d, i) => {
        if (i === index) d.setAttribute("data-active", "true");
        else d.removeAttribute("data-active");
        d.setAttribute("aria-selected", i === index ? "true" : "false");
      });
    };

    const setCardImages = () => {
      const prev = mod(index - 1);
      const next = mod(index + 1);

      imgPrev.src = slides[prev];
      imgCur.src  = slides[index];
      imgNext.src = slides[next];

      imgCur.loading = "eager";
      imgPrev.loading = "lazy";
      imgNext.loading = "lazy";
    };

    const getGap = () => {
      const cs = getComputedStyle(track);
      return parseFloat(cs.columnGap || cs.gap || "0") || 0;
    };

    const cardWidth = () => cards[1].getBoundingClientRect().width;

    // One "step" is one card + gap
    const stepSize = () => cardWidth() + getGap();

    // âœ… The magic: translate so the MIDDLE card is centered in the viewport
    const centerOffset = () => {
      const pL = parseFloat(getComputedStyle(viewport).paddingLeft || "0") || 0;
      const pR = parseFloat(getComputedStyle(viewport).paddingRight || "0") || 0;
      const innerW = (viewport.clientWidth - pL - pR) || 1;

      const w = cardWidth();
      const g = getGap();

      // Track layout is: [prev][gap][cur][gap][next]
      // We want cur's CENTER to align with viewport inner center.
      // cur left edge in track coords is at (w + g).
      // So we translate by: innerCenter - (curLeft + w/2)
      const innerCenter = innerW / 2;

      const curCenterInTrack = (w + g) + (w / 2);

      // Also account for left padding, since translate affects content inside padding box.
      return (pL + innerCenter) - curCenterInTrack;
    };

    const snapCenter = () => {
      track.style.transition = "none";
      track.style.transform = `translateX(${centerOffset()}px)`;
      track.offsetHeight; // reflow
    };

    const step = (dir) => {
      if (animating) return;
      animating = true;

      const base = centerOffset();
      const dist = stepSize();

      track.style.transition = "transform 320ms ease";
      track.style.transform = `translateX(${base + (dir === 1 ? -dist : dist)}px)`;

      const onDone = () => {
        track.removeEventListener("transitionend", onDone);

        index = mod(index + dir);
        setCardImages();
        setDots();
        snapCenter();

        animating = false;
      };

      track.addEventListener("transitionend", onDone);
    };

    const goTo = (target) => {
      target = mod(target);
      if (target === index || animating) return;

      const forward = mod(target - index);
      const backward = mod(index - target);

      if (forward === 1) return step(1);
      if (backward === 1) return step(-1);

      index = target;
      setCardImages();
      setDots();
      snapCenter();
    };

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        const t = Number(dot.getAttribute("data-index"));
        goTo(t);
      });
    });

    // Wheel paging
    let wheelLock = false;
    viewport.addEventListener(
      "wheel",
      (e) => {
        e.preventDefault();
        if (wheelLock || animating) return;
        wheelLock = true;

        const dominant = Math.abs(e.deltaY) >= Math.abs(e.deltaX) ? e.deltaY : e.deltaX;
        step(dominant > 0 ? 1 : -1);

        setTimeout(() => (wheelLock = false), 340);
      },
      { passive: false }
    );

    // Drag / swipe (snap on release)
    let startX = 0;
    let dragging = false;

    viewport.addEventListener("pointerdown", (e) => {
      if (animating) return;
      dragging = true;
      startX = e.clientX;
      viewport.setPointerCapture?.(e.pointerId);
    });

    viewport.addEventListener("pointerup", (e) => {
      if (!dragging || animating) return;
      dragging = false;

      const dx = e.clientX - startX;
      const threshold = Math.min(90, viewport.clientWidth * 0.14);

      if (dx < -threshold) step(1);
      else if (dx > threshold) step(-1);
    });

    viewport.addEventListener("pointercancel", () => {
      dragging = false;
    });

    // Keyboard (when focused)
    viewport.addEventListener("keydown", (e) => {
      if (animating) return;
      if (e.key === "ArrowRight") step(1);
      if (e.key === "ArrowLeft") step(-1);
    });

    // Resize: recompute center offset
    window.addEventListener("resize", () => snapCenter());

    // Init
    setCardImages();
    setDots();
    snapCenter();
  </script>

  <style>
    .home{
      display: grid;
      gap: 16px;
      width: 100%;
      padding-top: clamp(12px, 3vh, 28px);
      padding-bottom: clamp(18px, 4vh, 44px);
    }

    .carousel{
      width: 100%;
    }

    .viewport{
      width: 100%;
      overflow: hidden;
      outline: none;
      touch-action: pan-y;

      /* side breathing room on full-bleed */
      padding-inline: clamp(10px, 2vw, 18px);
      box-sizing: border-box;
    }

    .track{
      display: flex;
      align-items: center;
      gap: clamp(10px, 2vw, 18px);
      padding: 6px 0;
      will-change: transform;
    }

    .card{
      flex: 0 0 auto;

      /* Netflix-ish sizing */
      width: clamp(300px, 72vw, 860px);
      max-width: 94%;

      border-radius: 16px;
      overflow: hidden;
      aspect-ratio: 16 / 9;

      background: var(--card);
      border: 1px solid var(--border);

      transform: scale(0.94);
      opacity: 0.85;
      transition: transform 200ms ease, opacity 200ms ease;
    }

    .card.is-active{
      transform: scale(1);
      opacity: 1;
    }

    .card img{
      width: 100%;
      height: 100%;
      display: block;
      object-fit: contain;
      object-position: center;
      user-select: none;
      -webkit-user-drag: none;
    }

    .dots{
      margin-top: 0.9rem;
      display: flex;
      justify-content: center;
      gap: 10px;
      width: 100%;
    }

    .dot{
      width: 10px;
      height: 10px;
      border-radius: 999px;
      border: 0;
      background: currentColor;
      opacity: 0.35;
      cursor: pointer;
      transition: transform 160ms ease, opacity 160ms ease;
      position: relative;
    }

    .dot[data-active="true"]{
      opacity: 1;
      transform: scale(1.35);
    }

    .dot::before{
      content: "";
      position: absolute;
      inset: -10px;
    }

    @media (min-width: 900px){
      .card{
        width: min(68vw, 980px);
      }
    }
  </style>
</Layout>
