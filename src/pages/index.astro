---
import Layout from "../layouts/Layout.astro";

const slides = [
  "/projects/02 Project Two.png",
  "/projects/03 Project Three.png",
  "/projects/04 Project Four.png",
  "/projects/05 Project Five.png",
  "/projects/06 Project Six.png",
];
---

<Layout title="Home" description="">
  <section class="home">
    <div class="full-bleed" id="bleed">
      <!-- This is your normal site column; we’ll align the “center card” to THIS -->
      <div class="inner" id="inner">
        <!-- optional spacing/heading could go here -->
      </div>

      <!-- Full-bleed carousel row -->
      <div class="carousel" id="projects">
        <div class="viewport" id="viewport" tabindex="0" aria-label="Projects carousel">
          <ul class="track" id="track" aria-live="polite">
            <li class="card"><img id="img-prev" alt="Previous project" decoding="async" /></li>
            <li class="card is-active"><img id="img-cur" alt="Current project" decoding="async" /></li>
            <li class="card"><img id="img-next" alt="Next project" decoding="async" /></li>
          </ul>
        </div>

        <!-- Dots in normal content column -->
        <div class="inner">
          <div class="dots" id="dots" role="tablist" aria-label="Project slide navigation">
            {slides.map((_, i) => (
              <button class="dot" type="button" data-index={i} aria-label={`Go to slide ${i + 1}`} />
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <script define:vars={{ slides }}>
    const bleed = document.getElementById("bleed");
    const inner = document.getElementById("inner");
    const viewport = document.getElementById("viewport");
    const track = document.getElementById("track");
    const dots = document.querySelectorAll("#dots .dot");

    const imgPrev = document.getElementById("img-prev");
    const imgCur  = document.getElementById("img-cur");
    const imgNext = document.getElementById("img-next");

    const cards = Array.from(track.querySelectorAll(".card"));

    const n = slides.length;
    const mod = (x) => (x % n + n) % n;

    let index = 0;
    let animating = false;

    const setDots = () => {
      dots.forEach((d, i) => {
        if (i === index) d.setAttribute("data-active", "true");
        else d.removeAttribute("data-active");
        d.setAttribute("aria-selected", i === index ? "true" : "false");
      });
    };

    const setCardImages = () => {
      const prev = mod(index - 1);
      const next = mod(index + 1);

      imgPrev.src = slides[prev];
      imgCur.src  = slides[index];
      imgNext.src = slides[next];

      imgCur.loading = "eager";
      imgPrev.loading = "lazy";
      imgNext.loading = "lazy";
    };

    const getGap = () => {
      const cs = getComputedStyle(track);
      return parseFloat(cs.columnGap || cs.gap || "0") || 0;
    };

    const cardWidth = () => cards[1].getBoundingClientRect().width;
    const stepSize = () => cardWidth() + getGap();

    // ✅ Align active card to the CENTER of your normal content column (.inner),
    // not the viewport center.
    const centerOffset = () => {
      const gap = getGap();
      const w = cardWidth();

      // Where is the center of the .inner column in viewport coordinates?
      const innerRect = inner.getBoundingClientRect();
      const innerCenterX = innerRect.left + innerRect.width / 2;

      // Where is the start of the track in viewport coordinates?
      const trackRect = track.getBoundingClientRect();
      const trackLeftX = trackRect.left;

      // Current card center position in track coordinates:
      // prev at 0..w, gap, current starts at w+gap, center at (w+gap + w/2)
      const curCenterInTrack = (w + gap) + (w / 2);

      // We want: (trackLeftX + translateX + curCenterInTrack) === innerCenterX
      // But trackLeftX already includes current transform, so we compute using viewport + current transform style.
      // Easiest: compute desired translate relative to "no transform" by temporarily reading current translate.
      const current = getComputedStyle(track).transform;

      // Parse current translateX from matrix(...) (fallback 0)
      let currentTx = 0;
      if (current && current !== "none") {
        const m = current.match(/matrix\\(([^)]+)\\)/);
        if (m) {
          const parts = m[1].split(",").map((p) => parseFloat(p.trim()));
          // matrix(a,b,c,d,tx,ty)
          currentTx = parts[4] || 0;
        }
      }

      // trackRect.left already includes currentTx, so remove it to get "base" left
      const baseTrackLeftX = trackLeftX - currentTx;

      return innerCenterX - (baseTrackLeftX + curCenterInTrack);
    };

    const snapCenter = () => {
      track.style.transition = "none";
      track.style.transform = `translateX(${centerOffset()}px)`;
      track.offsetHeight;
    };

    const step = (dir) => {
      if (animating) return;
      animating = true;

      const base = centerOffset();
      const dist = stepSize();

      track.style.transition = "transform 320ms ease";
      track.style.transform = `translateX(${base + (dir === 1 ? -dist : dist)}px)`;

      const onDone = () => {
        track.removeEventListener("transitionend", onDone);

        index = mod(index + dir);
        setCardImages();
        setDots();
        snapCenter();

        animating = false;
      };

      track.addEventListener("transitionend", onDone);
    };

    const goTo = (target) => {
      target = mod(target);
      if (target === index || animating) return;

      const forward = mod(target - index);
      const backward = mod(index - target);

      if (forward === 1) return step(1);
      if (backward === 1) return step(-1);

      index = target;
      setCardImages();
      setDots();
      snapCenter();
    };

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        const t = Number(dot.getAttribute("data-index"));
        goTo(t);
      });
    });

    let wheelLock = false;
    viewport.addEventListener(
      "wheel",
      (e) => {
        e.preventDefault();
        if (wheelLock || animating) return;
        wheelLock = true;

        const dominant = Math.abs(e.deltaY) >= Math.abs(e.deltaX) ? e.deltaY : e.deltaX;
        step(dominant > 0 ? 1 : -1);

        setTimeout(() => (wheelLock = false), 340);
      },
      { passive: false }
    );

    let startX = 0;
    let dragging = false;

    viewport.addEventListener("pointerdown", (e) => {
      if (animating) return;
      dragging = true;
      startX = e.clientX;
      viewport.setPointerCapture?.(e.pointerId);
    });

    viewport.addEventListener("pointerup", (e) => {
      if (!dragging || animating) return;
      dragging = false;

      const dx = e.clientX - startX;
      const threshold = Math.min(90, viewport.clientWidth * 0.14);

      if (dx < -threshold) step(1);
      else if (dx > threshold) step(-1);
    });

    viewport.addEventListener("pointercancel", () => {
      dragging = false;
    });

    viewport.addEventListener("keydown", (e) => {
      if (animating) return;
      if (e.key === "ArrowRight") step(1);
      if (e.key === "ArrowLeft") step(-1);
    });

    window.addEventListener("resize", () => snapCenter());

    setCardImages();
    setDots();
    snapCenter();
  </script>

  <style>
    .home{
      display: grid;
      gap: 16px;
      width: 100%;
      padding-top: clamp(12px, 3vh, 28px);
      padding-bottom: clamp(18px, 4vh, 44px);
    }

    .carousel{ width: 100%; }

    .viewport{
      width: 100%;
      overflow: hidden;
      outline: none;
      touch-action: pan-y;

      /* breathing room at edges */
      padding-inline: clamp(10px, 2vw, 18px);
      box-sizing: border-box;
    }

    .track{
      display: flex;
      align-items: center;
      gap: clamp(10px, 2vw, 18px);
      padding: 6px 0;
      will-change: transform;
    }

    .card{
      flex: 0 0 auto;
      width: clamp(300px, 72vw, 860px);
      max-width: 94%;
      border-radius: 16px;
      overflow: hidden;
      aspect-ratio: 16 / 9;
      background: var(--card);
      border: 1px solid var(--border);
      transform: scale(0.94);
      opacity: 0.85;
      transition: transform 200ms ease, opacity 200ms ease;
    }

    .card.is-active{
      transform: scale(1);
      opacity: 1;
    }

    .card img{
      width: 100%;
      height: 100%;
      display: block;
      object-fit: contain;
      object-position: center;
      user-select: none;
      -webkit-user-drag: none;
    }

    .dots{
      margin-top: 0.9rem;
      display: flex;
      justify-content: center;
      gap: 10px;
      width: 100%;
    }

    .dot{
      width: 10px;
      height: 10px;
      border-radius: 999px;
      border: 0;
      background: currentColor;
      opacity: 0.35;
      cursor: pointer;
      transition: transform 160ms ease, opacity 160ms ease;
      position: relative;
    }

    .dot[data-active="true"]{
      opacity: 1;
      transform: scale(1.35);
    }

    .dot::before{
      content: "";
      position: absolute;
      inset: -10px;
    }

    @media (min-width: 900px){
      .card{ width: min(68vw, 980px); }
    }
  </style>
</Layout>
