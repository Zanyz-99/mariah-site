---
import Layout from "../../layouts/Layout.astro"; // adjust if needed
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Amplitude";
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const coverFile = "cover-image.png";
const txtFile = "amplitude.txt";
const subtitle = "Re-Imagining Ostiense Station | Rome, Italy";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let subsequentImages: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  const imgs = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name)
    .sort((a, b) => a.localeCompare(b));

  subsequentImages = imgs
    .filter((name) => name !== coverFile)
    .map((name) => `${BASE}/${encodeURIComponent(name)}`);
} catch (err) {
  console.error("[Amplitude page] asset read error:", err);
}

const coverSrc = `${BASE}/${coverFile}`;
const galleryImages = [coverSrc, ...subsequentImages];
---

<Layout title="Amplitude" description="Amplitude project">
  <main class="amp">
    <div class="amp__titleRow">
      <h1 class="amp__title">Amplitude</h1>
    </div>

    <section class="amp__grid" aria-label="Amplitude project grid">
      <!-- Row 1: Cover image -->
      <figure class="amp__card amp__card--cover amp__card--firstRow">
        <button
          class="amp__imgBtn"
          type="button"
          data-lb-index="0"
          aria-label="Open cover image"
        >
          <img src={coverSrc} alt="Amplitude cover" loading="eager" decoding="async" />
        </button>
      </figure>

      <!-- Row 1: Subtitle + description -->
      <article class="amp__card amp__card--text amp__card--firstRow">
        <div class="amp__subtitle">{subtitle}</div>

        {descriptionText ? (
          <div class="amp__body">{descriptionText}</div>
        ) : (
          <div class="amp__body amp__body--error">
            Couldn’t load amplitude.txt<br />
            Expected: <code>public/projects/{FOLDER}/amplitude.txt</code>
          </div>
        )}
      </article>

      <!-- Follow-on rows: images -->
      {subsequentImages.map((src, i) => (
        <figure class="amp__card amp__card--img">
          <button
            class="amp__imgBtn"
            type="button"
            data-lb-index={i + 1}
            aria-label="Open image"
          >
            <img src={src} alt="" loading="lazy" decoding="async" />
          </button>
        </figure>
      ))}
    </section>

    <!-- Lightbox -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true" aria-label="Image viewer">
        <button class="lb__close" type="button" data-lb-close aria-label="Close">×</button>

        <button class="lb__nav lb__nav--prev" type="button" data-lb-prev aria-label="Previous">‹</button>

        <figure class="lb__figure">
          <!-- This background is the key: it matches the page and blocks "see-through" PNGs -->
          <div class="lb__stage">
            <img class="lb__img" id="lbImg" alt="" />
          </div>
        </figure>

        <button class="lb__nav lb__nav--next" type="button" data-lb-next aria-label="Next">›</button>
      </div>
    </div>

    <script define:vars={{ galleryImages }} is:inline>
      (function () {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const lbImg = document.getElementById("lbImg");

        let index = 0;
        let lastFocus = null;

        const isOpen = () => lb.getAttribute("aria-hidden") === "false";

        const setOpen = (open) => {
          lb.setAttribute("aria-hidden", open ? "false" : "true");
          document.documentElement.classList.toggle("lb-open", open);
          document.body.classList.toggle("lb-open", open);
        };

        const show = (i) => {
          index = (i + images.length) % images.length;
          lbImg.src = images[index];
        };

        const open = (i) => {
          lastFocus = document.activeElement;
          show(i);
          setOpen(true);
          const closeBtn = lb.querySelector(".lb__close");
          closeBtn && closeBtn.focus();
        };

        const close = () => {
          setOpen(false);
          lbImg.removeAttribute("src");
          if (lastFocus && typeof lastFocus.focus === "function") lastFocus.focus();
        };

        const next = () => show(index + 1);
        const prev = () => show(index - 1);

        document.addEventListener("click", (e) => {
          const t = e.target;

          const btn = t.closest?.("[data-lb-index]");
          if (btn) {
            open(Number(btn.getAttribute("data-lb-index") || 0));
            return;
          }

          if (t.closest?.("[data-lb-close]")) {
            close();
            return;
          }

          if (t.closest?.("[data-lb-next]")) {
            next();
            return;
          }

          if (t.closest?.("[data-lb-prev]")) {
            prev();
            return;
          }
        });

        document.addEventListener("keydown", (e) => {
          if (!isOpen()) return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") next();
          if (e.key === "ArrowLeft") prev();
        });
      })();
    </script>
  </main>

  <style>
    .amp {
      padding: 2rem 1.25rem 3rem;
      max-width: 1100px;
      margin: 0 auto;
    }

    .amp__titleRow {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 0.75rem;
    }

    .amp__title {
      margin: 0;
      font-size: clamp(1.4rem, 2vw, 1.9rem);
      letter-spacing: -0.02em;
    }

    .amp__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.1rem;
      align-items: start;
    }

    /* Make FIRST ROW center vertically with each other */
    .amp__card--firstRow {
      align-self: center;
    }

    /* no rounded edges */
    .amp__card {
      border-radius: 0;
      overflow: hidden;
      background: rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .amp__imgBtn {
      display: block;
      width: 100%;
      padding: 0;
      border: 0;
      background: transparent;
      cursor: zoom-in;
    }

    .amp__card img {
      display: block;
      width: 100%;
      height: auto;
    }

    .amp__card--cover img,
    .amp__card--img img {
      aspect-ratio: 4 / 3;
      object-fit: cover;
    }

    .amp__card--text {
      padding: 1.1rem 1.1rem 0.9rem;
    }

    .amp__subtitle {
      font-size: 0.9rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      opacity: 0.75;
      margin-bottom: 0.6rem;
    }

    .amp__body {
      font: inherit;
      white-space: pre-line;
      line-height: 1.6;
      font-size: 1rem;
      opacity: 0.95;
      max-height: 70vh;
      overflow: auto;
      padding-right: 0.25rem;
    }

    .amp__body--error {
      opacity: 0.85;
    }

    /* Lightbox */
    .lb {
      position: fixed;
      inset: 0;
      display: none;
      z-index: 9999;
    }
    .lb[aria-hidden="false"] {
      display: block;
    }

    /* Background same as page: use your site's theme variable if present; fallback to white */
    .lb__backdrop {
      position: absolute;
      inset: 0;
      background: var(--bg, #fff);
    }

    .lb__panel {
      position: absolute;
      inset: 0;
      display: grid;
      grid-template-columns: 56px 1fr 56px;
      align-items: center;
      padding: 2rem 1rem;
    }

    .lb__figure {
      margin: 0;
      height: 100%;
      display: grid;
      place-items: center;
    }

    /* Stage blocks transparent PNGs from showing through */
    .lb__stage {
      background: var(--bg, #fff);
      padding: 0;
      display: grid;
      place-items: center;
      max-width: min(1100px, 92vw);
      max-height: 86vh;
      width: 100%;
      height: 100%;
    }

    .lb__img {
      max-width: 100%;
      max-height: 100%;
      width: auto;
      height: auto;
      object-fit: contain;
      border-radius: 0;
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    }

    .lb__close {
      position: absolute;
      top: 18px;
      right: 18px;
      width: 44px;
      height: 44px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.85);
      color: #111;
      font-size: 28px;
      line-height: 40px;
      border-radius: 999px;
      cursor: pointer;
    }

    .lb__nav {
      width: 44px;
      height: 64px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.85);
      color: #111;
      font-size: 40px;
      border-radius: 10px;
      cursor: pointer;
      user-select: none;
    }

    .lb__nav--prev {
      justify-self: start;
    }
    .lb__nav--next {
      justify-self: end;
    }

    :global(html.lb-open),
    :global(body.lb-open) {
      overflow: hidden;
    }

    @media (max-width: 800px) {
      .amp__titleRow {
        justify-content: flex-start;
      }
      .amp__grid {
        grid-template-columns: 1fr;
      }
      .amp__body {
        max-height: none;
      }
      .lb__panel {
        grid-template-columns: 44px 1fr 44px;
        padding: 1.25rem 0.75rem;
      }
      .lb__nav {
        width: 40px;
        height: 56px;
      }
    }
  </style>
</Layout>
