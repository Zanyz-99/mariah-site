---
import Layout from "../../layouts/Layout.astro";
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Amplitude";
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const txtFile = "amplitude.txt";
const subtitle = "Re-Imagining Ostiense Station | Rome, Italy";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let imagesInFolder: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  imagesInFolder = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name);
} catch (err) {
  console.error("[Amplitude page] asset read error:", err);
}

// ✅ EXACT order requested
const orderedFiles = [
  "Images-08.png",
  "Images-06.png",
  "Images-07.png",
  "Images-05.png",
  "Images-10.png",
  "Images-09.png",
  "Images-04.png",
  "cover-image.png",
  "Images-01.png",
];

// Case-insensitive match to folder contents
const byLower = new Map(imagesInFolder.map((n) => [n.toLowerCase(), n]));
const finalFiles = orderedFiles
  .map((n) => byLower.get(n.toLowerCase()))
  .filter(Boolean) as string[];

const galleryImages = finalFiles.map(
  (name) => `${BASE}/${encodeURIComponent(name)}`
);

// Cover
const coverIndex = finalFiles.findIndex((f) => f.toLowerCase() === "cover-image.png");
const coverSrc = coverIndex >= 0 ? galleryImages[coverIndex] : `${BASE}/cover-image.png`;

// Non-cover images (render below in order)
const nonCover = finalFiles
  .map((file, i) => ({ file, src: galleryImages[i], i }))
  .filter((x) => x.file.toLowerCase() !== "cover-image.png");
---

<Layout title="Amplitude" description="Amplitude project">
  <main class="amp">
    <!-- HERO (dark) -->
    <section class="amp__hero" aria-label="Amplitude hero">
      <div class="amp__heroInner">
        <div class="amp__grid amp__grid--hero">
          <!-- Cover (maintains aspect ratio: contain, no crop) -->
          <figure class="amp__heroMedia">
            <button
              class="amp__imgBtn"
              type="button"
              data-lb-index={String(coverIndex >= 0 ? coverIndex : 0)}
              aria-label="Open cover image"
            >
              <img class="amp__img--hero" src={coverSrc} alt="Cover image" loading="eager" decoding="async" />
            </button>
          </figure>

          <!-- Description -->
          <article class="amp__heroText" id="descBlock">
            <h1 class="amp__title">Amplitude</h1>
            <div class="amp__subtitle">{subtitle}</div>

            {descriptionText ? (
              <div class="amp__body">{descriptionText}</div>
            ) : (
              <div class="amp__body amp__body--error">
                Couldn’t load <code>amplitude.txt</code><br />
                Expected: <code>public/projects/{FOLDER}/amplitude.txt</code>
              </div>
            )}
          </article>
        </div>
      </div>
    </section>

    <!-- GALLERY (white begins here) -->
    <section class="amp__gallery" aria-label="Amplitude gallery">
      <div id="whiteStart" aria-hidden="true"></div>

      <div class="amp__galleryInner">
        <div class="amp__grid amp__grid--gallery">
          {nonCover.map(({ src, i }) => (
            <figure class="amp__galleryItem">
              <button
                class="amp__imgBtn amp__imgBtn--full"
                type="button"
                data-lb-index={String(i)}
                aria-label="Open image"
              >
                <img class="amp__img--full" src={src} alt="" loading="lazy" decoding="async" />
              </button>
            </figure>
          ))}
        </div>
      </div>
    </section>

    <!-- Lightbox -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true" aria-label="Image viewer">
        <button class="lb__close" type="button" data-lb-close aria-label="Close">×</button>
        <button class="lb__nav lb__nav--prev" type="button" data-lb-prev aria-label="Previous">‹</button>

        <figure class="lb__figure">
          <div class="lb__stage">
            <img class="lb__img" id="lbImg" alt="" />
          </div>
        </figure>

        <button class="lb__nav lb__nav--next" type="button" data-lb-next aria-label="Next">›</button>
      </div>
    </div>

    <!-- Lightbox behavior -->
    <script define:vars={{ galleryImages }} is:inline>
      (function () {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const lbImg = document.getElementById("lbImg");

        let index = 0;
        let lastFocus = null;

        const isOpen = () => lb.getAttribute("aria-hidden") === "false";

        const setOpen = (open) => {
          lb.setAttribute("aria-hidden", open ? "false" : "true");
          document.documentElement.classList.toggle("lb-open", open);
          document.body.classList.toggle("lb-open", open);
        };

        const show = (i) => {
          index = (i + images.length) % images.length;
          lbImg.src = images[index];
        };

        const open = (i) => {
          lastFocus = document.activeElement;
          show(i);
          setOpen(true);
          const closeBtn = lb.querySelector(".lb__close");
          closeBtn && closeBtn.focus();
        };

        const close = () => {
          setOpen(false);
          lbImg.removeAttribute("src");
          if (lastFocus && typeof lastFocus.focus === "function") lastFocus.focus();
        };

        const next = () => show(index + 1);
        const prev = () => show(index - 1);

        document.addEventListener("click", (e) => {
          const t = e.target;

          const btn = t.closest?.("[data-lb-index]");
          if (btn) {
            const i = Number(btn.getAttribute("data-lb-index") || 0);
            if (!Number.isNaN(i)) open(i);
            return;
          }

          if (t.closest?.("[data-lb-close]")) return close();
          if (t.closest?.("[data-lb-next]")) return next();
          if (t.closest?.("[data-lb-prev]")) return prev();
        });

        document.addEventListener("keydown", (e) => {
          if (!isOpen()) return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") next();
          if (e.key === "ArrowLeft") prev();
        });
      })();
    </script>

    <!-- Fix Navbar to viewport + set padding based on its height -->
    <script is:inline>
      (function () {
        const nav =
          document.querySelector("nav.topbar") ||
          document.querySelector("nav") ||
          document.querySelector("header nav");

        if (!nav) return;

        const set = () => {
          const h = Math.ceil(nav.getBoundingClientRect().height);
          document.documentElement.style.setProperty("--amp-nav-h", h + "px");
        };

        window.addEventListener("load", set);
        window.addEventListener("resize", set);
        if ("ResizeObserver" in window) new ResizeObserver(set).observe(nav);
        set();
      })();
    </script>

    <!-- Background flip + navbar/footer flip when crossing into white section -->
    <script is:inline>
      (function () {
        const html = document.documentElement;
        const body = document.body;

        const sentinel = document.getElementById("whiteStart");
        if (!sentinel) return;

        const nav =
          document.querySelector("nav.topbar") ||
          document.querySelector("nav") ||
          document.querySelector("header nav");

        const footer = document.querySelector("footer");

        const setWhiteMode = (on) => {
          html.classList.toggle("amp-white", on);
          body.classList.toggle("amp-white", on);
          if (nav) nav.classList.toggle("amp-white", on);
          if (footer) footer.classList.toggle("amp-white", on);
        };

        const update = () => {
          const r = sentinel.getBoundingClientRect();
          setWhiteMode(r.top <= 0);
        };

        const io = new IntersectionObserver(() => update(), { threshold: [0, 1] });
        io.observe(sentinel);

        window.addEventListener("scroll", update, { passive: true });
        window.addEventListener("resize", update);

        requestAnimationFrame(update);
      })();
    </script>

    <style>
      /* Page wrapper inside full-width Layout main */
      .amp {
        width: 100%;
      }

      .amp__heroInner,
      .amp__galleryInner {
        width: 80vw;
        max-width: 1400px;
        margin: 0 auto;
      }

      .amp__grid {
        display: grid;
        gap: 1.1rem;
      }

      /* Fix navbar to viewport (doesn't scroll) */
      :global(nav.topbar),
      :global(nav) {
        position: fixed !important;
        top: 0;
        left: 0;
        right: 0;
        z-index: 9998;
      }

      /* Push content below fixed navbar */
      .amp__hero,
      .amp__gallery {
        padding-top: var(--amp-nav-h, 0px);
      }

      /* ---------------------------
         HERO (dark)
         --------------------------- */
      .amp__hero {
        min-height: calc(100svh - var(--amp-nav-h, 0px));
        display: grid;
        align-items: stretch;
        color: #fff;
      }

      .amp__grid--hero {
        grid-template-columns: 1fr 1fr;
        min-height: calc(100svh - var(--amp-nav-h, 0px));
        align-items: stretch;
      }

      .amp__heroMedia,
      .amp__heroText {
        border: 1px solid rgba(255, 255, 255, 0.16);
        background: rgba(255, 255, 255, 0.03);
        overflow: hidden;
        border-radius: 0;
      }

      .amp__imgBtn {
        display: block;
        width: 100%;
        height: 100%;
        padding: 0;
        border: 0;
        background: transparent;
        cursor: zoom-in;
      }

      /* ✅ cover maintains aspect ratio (no crop) */
      .amp__img--hero {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: contain;
        background: #121212; /* behind transparent areas */
      }

      .amp__heroText {
        padding: 1.1rem 1.1rem 0.95rem;
        text-align: left;
      }

      .amp__title {
        margin: 0 0 0.45rem;
        font-size: clamp(1.6rem, 2.2vw, 2.15rem);
        letter-spacing: -0.02em;
        color: #fff;
      }

      .amp__subtitle {
        font-size: 0.95rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        margin-bottom: 0.9rem;
        color: rgba(255, 255, 255, 0.74);
      }

      .amp__body {
        white-space: pre-line;
        line-height: 1.65;
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.78);
      }

      /* ---------------------------
         GALLERY (white)
         --------------------------- */
      .amp__gallery {
        padding-bottom: 2.5rem;
      }

      #whiteStart {
        height: 1px;
        width: 100%;
      }

      .amp__grid--gallery {
        grid-template-columns: 1fr;
        gap: 1.4rem;
      }

      .amp__galleryItem {
        margin: 0;
        padding: 0;
        background: transparent;
        border: 0;
      }

      .amp__imgBtn--full {
        width: 100%;
        height: auto;
        padding: 0.75rem 0;
      }

      .amp__img--full {
        display: block;
        width: auto;
        height: auto;
        max-width: 100%;
        margin: 0 auto;
        object-fit: contain;
      }

      /* ---------------------------
         FULL PAGE background flip
         --------------------------- */
      :global(html),
      :global(body) {
        background: #121212 !important; /* start dark */
        transition: background 200ms ease;
      }

      :global(html.amp-white),
      :global(body.amp-white) {
        background: #ffffff !important; /* scroll into white */
      }

      /* Nav/Footer flip with section */
      :global(nav),
      :global(footer) {
        transition: background 200ms ease, border-color 200ms ease, color 200ms ease;
      }

      :global(nav:not(.amp-white)) {
        background: #121212 !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.12);
      }

      :global(footer:not(.amp-white)) {
        background: #121212 !important;
        border-top: 1px solid rgba(255, 255, 255, 0.12);
      }

      :global(nav:not(.amp-white) a),
      :global(footer:not(.amp-white) a) {
        color: rgba(255, 255, 255, 0.86) !important;
      }

      :global(nav.amp-white) {
        background: #ffffff !important;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      }

      :global(footer.amp-white) {
        background: #ffffff !important;
        border-top: 1px solid rgba(0, 0, 0, 0.12);
      }

      :global(nav.amp-white a),
      :global(footer.amp-white a) {
        color: #0b0b0b !important;
      }

      /* ---------------------------
         Lightbox
         --------------------------- */
      .lb {
        position: fixed;
        inset: 0;
        display: none;
        z-index: 9999;
      }
      .lb[aria-hidden="false"] { display: block; }

      .lb__backdrop {
        position: absolute;
        inset: 0;
        background: #fff;
      }

      .lb__panel {
        position: absolute;
        inset: 0;
        display: grid;
        grid-template-columns: 56px 1fr 56px;
        align-items: center;
        padding: 2rem 1rem;
      }

      .lb__figure {
        margin: 0;
        height: 100%;
        display: grid;
        place-items: center;
      }

      .lb__stage {
        background: #fff;
        width: min(1100px, 92vw);
        height: 86vh;
        display: grid;
        place-items: center;
      }

      .lb__img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 0;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
      }

      .lb__close {
        position: absolute;
        top: 18px;
        right: 18px;
        width: 44px;
        height: 44px;
        border: 1px solid rgba(0, 0, 0, 0.15);
        background: rgba(255, 255, 255, 0.9);
        color: #111;
        font-size: 28px;
        line-height: 40px;
        border-radius: 999px;
        cursor: pointer;
      }

      .lb__nav {
        width: 44px;
        height: 64px;
        border: 1px solid rgba(0, 0, 0, 0.15);
        background: rgba(255, 255, 255, 0.9);
        color: #111;
        font-size: 40px;
        border-radius: 10px;
        cursor: pointer;
        user-select: none;
      }

      :global(html.lb-open),
      :global(body.lb-open) { overflow: hidden; }

      @media (max-width: 800px) {
        .amp__heroInner,
        .amp__galleryInner {
          width: 100%;
        }

        .amp__grid--hero {
          grid-template-columns: 1fr;
          min-height: auto;
        }

        .amp__heroMedia {
          aspect-ratio: 4 / 3;
        }

        .amp__img--hero {
          height: 100%;
        }

        .lb__panel {
          grid-template-columns: 44px 1fr 44px;
          padding: 1.25rem 0.75rem;
        }
        .lb__stage { height: 84vh; }
      }
    </style>
  </main>
</Layout>
