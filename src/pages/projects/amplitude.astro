---
import Layout from "../../layouts/Layout.astro"; // adjust if needed
import { promises as fs } from "node:fs";
import path from "node:path";

// IMPORTANT: folder is capital-A per your repo: public/projects/Amplitude
const FOLDER = "Amplitude";

const BASE = `/projects/${FOLDER}`; // public URL base
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const coverFile = "cover-image.png";
const txtFile = "amplitude.txt";

const subtitle = "Re-Imagining Ostiense Station | Rome, Italy";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let subsequentImages: string[] = [];

try {
  // Read text directly from /public (no fetch needed)
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  // List images in the folder
  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });

  const imgs = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name)
    .sort((a, b) => a.localeCompare(b));

  subsequentImages = imgs
    .filter((name) => name !== coverFile) // exclude cover
    .map((name) => `${BASE}/${encodeURIComponent(name)}`);
} catch (err) {
  console.error("[Amplitude page] asset read error:", err);
}

const coverSrc = `${BASE}/${coverFile}`;
---

<Layout title="Amplitude" description="Amplitude project">
  <main class="amp">
    <!-- Project title (top-right, before grid) -->
    <div class="amp__titleRow">
      <h1 class="amp__title">Amplitude</h1>
    </div>

    <section class="amp__grid" aria-label="Amplitude project grid">
      <!-- Row 1: Cover image -->
      <figure class="amp__card amp__card--cover">
        <img src={coverSrc} alt="Amplitude cover" loading="eager" decoding="async" />
      </figure>

      <!-- Row 1: Subtitle + description -->
      <article class="amp__card amp__card--text">
        <div class="amp__subtitle">{subtitle}</div>

        {descriptionText ? (
          <pre class="amp__pre">{descriptionText}</pre>
        ) : (
          <pre class="amp__pre amp__pre--error">
Couldnâ€™t load amplitude.txt

Expected:
public/projects/{FOLDER}/amplitude.txt
          </pre>
        )}
      </article>

      <!-- Follow-on rows: subsequent images -->
      {subsequentImages.map((src) => (
        <figure class="amp__card amp__card--img">
          <img src={src} alt="" loading="lazy" decoding="async" />
        </figure>
      ))}
    </section>
  </main>

  <style>
    .amp {
      padding: 2rem 1.25rem 3rem;
      max-width: 1100px;
      margin: 0 auto;
    }

    .amp__titleRow {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 0.75rem;
    }

    .amp__title {
      margin: 0;
      font-size: clamp(1.4rem, 2vw, 1.9rem);
      letter-spacing: -0.02em;
    }

    .amp__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.1rem;
      align-items: start;
    }

    .amp__card {
      border-radius: 16px;
      overflow: hidden;
      background: rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .amp__card img {
      display: block;
      width: 100%;
      height: auto;
    }

    .amp__card--cover img,
    .amp__card--img img {
      aspect-ratio: 4 / 3;
      object-fit: cover;
    }

    .amp__card--text {
      padding: 1.1rem 1.1rem 0.9rem;
    }

    .amp__subtitle {
      font-size: 0.9rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      opacity: 0.75;
      margin-bottom: 0.6rem;
    }

    .amp__pre {
      margin: 0;
      white-space: pre-wrap;
      word-break: break-word;
      line-height: 1.55;
      font-size: 0.95rem;
      opacity: 0.95;
      max-height: 70vh;
      overflow: auto;
      padding-right: 0.25rem;
    }

    .amp__pre--error {
      opacity: 0.85;
    }

    @media (max-width: 800px) {
      .amp__titleRow {
        justify-content: flex-start;
      }
      .amp__grid {
        grid-template-columns: 1fr;
      }
      .amp__pre {
        max-height: none;
      }
    }
  </style>
</Layout>
