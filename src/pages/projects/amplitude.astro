---
import Layout from "../../layouts/Layout.astro"; // adjust if needed
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Amplitude"; // matches: public/projects/Amplitude
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const txtFile = "amplitude.txt";
const subtitle = "Re-Imagining Ostiense Station | Rome, Italy";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let imagesInFolder: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  imagesInFolder = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name);
} catch (err) {
  console.error("[Amplitude page] asset read error:", err);
}

// Your required order (using your actual filenames)
const orderedFiles = [
  "Images-08.png",
  "Images-06.png",
  "Images-07.png",
  "Images-05.png",
  "Images-10.png",
  "Images-09.png",
  "Images-04.png",
  "cover-image.png", // treat as "Images-02"
  "Images-01.png",
];

// Keep your order first, then append any remaining images not listed (stable, alphabetical)
const orderedSet = new Set(orderedFiles.map((x) => x.toLowerCase()));
const remaining = imagesInFolder
  .filter((name) => !orderedSet.has(name.toLowerCase()))
  .sort((a, b) => a.localeCompare(b));

const finalFiles = [
  ...orderedFiles.filter((name) => imagesInFolder.some((f) => f.toLowerCase() === name.toLowerCase())),
  ...remaining,
];

// Public URLs
const finalUrls = finalFiles.map((name) => `${BASE}/${encodeURIComponent(name)}`);

// Lightbox gallery = same as displayed order
const galleryImages = finalUrls;
---

<Layout title="Amplitude" description="Amplitude project">
  <main class="amp">
    <section class="amp__grid" aria-label="Amplitude project grid">
      <!-- Left: Title + subtitle + description block -->
      <article class="amp__desc amp__card" id="descBlock">
        <h1 class="amp__title">Amplitude</h1>
        <div class="amp__subtitle">{subtitle}</div>

        {descriptionText ? (
          <div class="amp__body">{descriptionText}</div>
        ) : (
          <div class="amp__body amp__body--error">
            Couldn’t load <code>amplitude.txt</code><br />
            Expected: <code>public/projects/{FOLDER}/amplitude.txt</code>
          </div>
        )}
      </article>

      <!-- Right: the "main cover-photo" (in your sequence, cover-image is position 8),
           but you asked the main cover-photo sized to match description block.
           We'll show cover-image here as the paired image next to the description. -->
      <figure class="amp__photo amp__card amp__photoCard">
        <button class="amp__imgBtn" type="button" data-lb-index={String(finalFiles.findIndex(f => f.toLowerCase() === "cover-image.png"))} aria-label="Open cover image">
          <img
            src={`${BASE}/cover-image.png`}
            alt="Cover image"
            loading="eager"
            decoding="async"
          />
        </button>
      </figure>

      <!-- Then the ordered photos grid (excluding cover-image because it's already shown above)
           in your requested order, still clickable -->
      {finalUrls
        .map((src, i) => ({ src, i, file: finalFiles[i] }))
        .filter((x) => x.file.toLowerCase() !== "cover-image.png")
        .map(({ src, i }) => (
          <figure class="amp__photo amp__card amp__photoCard">
            <button class="amp__imgBtn" type="button" data-lb-index={String(i)} aria-label="Open image">
              <img src={src} alt="" loading="lazy" decoding="async" />
            </button>
          </figure>
        ))}
    </section>

    <!-- Lightbox -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true" aria-label="Image viewer">
        <button class="lb__close" type="button" data-lb-close aria-label="Close">×</button>
        <button class="lb__nav lb__nav--prev" type="button" data-lb-prev aria-label="Previous">‹</button>

        <figure class="lb__figure">
          <div class="lb__stage">
            <img class="lb__img" id="lbImg" alt="" />
          </div>
        </figure>

        <button class="lb__nav lb__nav--next" type="button" data-lb-next aria-label="Next">›</button>
      </div>
    </div>

    <!-- Lightbox JS (safe injection) -->
    <script define:vars={{ galleryImages }} is:inline>
      (function () {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const lbImg = document.getElementById("lbImg");

        let index = 0;
        let lastFocus = null;

        const isOpen = () => lb.getAttribute("aria-hidden") === "false";

        const setOpen = (open) => {
          lb.setAttribute("aria-hidden", open ? "false" : "true");
          document.documentElement.classList.toggle("lb-open", open);
          document.body.classList.toggle("lb-open", open);
        };

        const show = (i) => {
          index = (i + images.length) % images.length;
          lbImg.src = images[index];
        };

        const open = (i) => {
          lastFocus = document.activeElement;
          show(i);
          setOpen(true);
          const closeBtn = lb.querySelector(".lb__close");
          closeBtn && closeBtn.focus();
        };

        const close = () => {
          setOpen(false);
          lbImg.removeAttribute("src");
          if (lastFocus && typeof lastFocus.focus === "function") lastFocus.focus();
        };

        const next = () => show(index + 1);
        const prev = () => show(index - 1);

        document.addEventListener("click", (e) => {
          const t = e.target;

          const btn = t.closest?.("[data-lb-index]");
          if (btn) {
            const i = Number(btn.getAttribute("data-lb-index") || 0);
            if (!Number.isNaN(i)) open(i);
            return;
          }

          if (t.closest?.("[data-lb-close]")) return close();
          if (t.closest?.("[data-lb-next]")) return next();
          if (t.closest?.("[data-lb-prev]")) return prev();
        });

        document.addEventListener("keydown", (e) => {
          if (!isOpen()) return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") next();
          if (e.key === "ArrowLeft") prev();
        });
      })();
    </script>

    <!-- Height matching JS: set all photos to description block height -->
    <script is:inline>
      (function () {
        const desc = document.getElementById("descBlock");
        if (!desc) return;

        const setH = () => {
          const h = Math.round(desc.getBoundingClientRect().height);
          document.documentElement.style.setProperty("--amp-row-h", h + "px");
        };

        // Initial + responsive updates
        setH();
        window.addEventListener("load", setH);
        window.addEventListener("resize", setH);

        if ("ResizeObserver" in window) {
          const ro = new ResizeObserver(setH);
          ro.observe(desc);
        }
      })();
    </script>
  </main>

  <style>
    .amp {
      padding: 2rem 1.25rem 3rem;
      max-width: 1100px;
      margin: 0 auto;
    }

    /* 2 columns grid: first row is (desc, cover), then photos continue two-up */
    .amp__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.1rem;
      align-items: start;
    }

    .amp__card {
      border-radius: 0; /* no rounded edges */
      overflow: hidden;
      background: rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    /* Description block (left aligned) */
    .amp__desc {
      padding: 1.1rem 1.1rem 0.95rem;
      text-align: left;
    }

    .amp__title {
      margin: 0 0 0.45rem;
      font-size: clamp(1.6rem, 2.2vw, 2.15rem);
      letter-spacing: -0.02em;
    }

    .amp__subtitle {
      font-size: 0.95rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      opacity: 0.75;
      margin-bottom: 0.9rem;
    }

    .amp__body {
      font: inherit;         /* match site font */
      white-space: pre-line; /* preserve line breaks from .txt */
      line-height: 1.65;
      font-size: 1rem;
      opacity: 0.95;
    }

    .amp__body--error {
      opacity: 0.85;
    }

    /* Photos: force height to match description block */
    .amp__photoCard {
      height: var(--amp-row-h, auto);
    }

    .amp__imgBtn {
      display: block;
      width: 100%;
      height: 100%;
      padding: 0;
      border: 0;
      background: transparent;
      cursor: zoom-in;
    }

    .amp__photo img {
      width: 100%;
      height: 100%;
      object-fit: cover; /* fills the matched height cleanly */
      display: block;
    }

    /* Lightbox - background matches page (no "see through") */
    .lb {
      position: fixed;
      inset: 0;
      display: none;
      z-index: 9999;
    }
    .lb[aria-hidden="false"] {
      display: block;
    }

    .lb__backdrop {
      position: absolute;
      inset: 0;
      background: var(--bg, #fff); /* same as page */
    }

    .lb__panel {
      position: absolute;
      inset: 0;
      display: grid;
      grid-template-columns: 56px 1fr 56px;
      align-items: center;
      padding: 2rem 1rem;
    }

    .lb__figure {
      margin: 0;
      height: 100%;
      display: grid;
      place-items: center;
    }

    /* Stage blocks transparency and matches page bg */
    .lb__stage {
      background: var(--bg, #fff);
      width: min(1100px, 92vw);
      height: 86vh;
      display: grid;
      place-items: center;
    }

    .lb__img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border-radius: 0;
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    }

    .lb__close {
      position: absolute;
      top: 18px;
      right: 18px;
      width: 44px;
      height: 44px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.9);
      color: #111;
      font-size: 28px;
      line-height: 40px;
      border-radius: 999px;
      cursor: pointer;
    }

    .lb__nav {
      width: 44px;
      height: 64px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.9);
      color: #111;
      font-size: 40px;
      border-radius: 10px;
      cursor: pointer;
      user-select: none;
    }

    :global(html.lb-open),
    :global(body.lb-open) {
      overflow: hidden;
    }

    /* Mobile: stack, and remove forced height so it doesn't look weird */
    @media (max-width: 800px) {
      .amp__grid {
        grid-template-columns: 1fr;
      }
      .amp__photoCard {
        height: auto;
      }
      .amp__photo img {
        height: auto;
      }
      .lb__panel {
        grid-template-columns: 44px 1fr 44px;
        padding: 1.25rem 0.75rem;
      }
      .lb__stage {
        height: 84vh;
      }
    }
  </style>
</Layout>
