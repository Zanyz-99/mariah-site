---
import Layout from "../../layouts/Layout.astro";
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Amplitude";
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const txtFile = "amplitude.txt";
const subtitle = "Re-Imagining Ostiense Station | Rome, Italy";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let imagesInFolder: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  imagesInFolder = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name);
} catch (err) {
  console.error("[Amplitude page] asset read error:", err);
}

const orderedFiles = [
  "Images-08.png",
  "Images-06.png",
  "Images-07.png",
  "Images-05.png",
  "Images-10.png",
  "Images-09.png",
  "Images-04.png",
  "cover-image.png",
  "Images-01.png",
];

const byLower = new Map(imagesInFolder.map((n) => [n.toLowerCase(), n]));
const finalFiles = orderedFiles
  .map((n) => byLower.get(n.toLowerCase()))
  .filter(Boolean) as string[];

const galleryImages = finalFiles.map(
  (name) => `${BASE}/${encodeURIComponent(name)}`
);

const coverIndex = finalFiles.findIndex(
  (f) => f.toLowerCase() === "cover-image.png"
);
const coverSrc =
  coverIndex >= 0 ? galleryImages[coverIndex] : `${BASE}/cover-image.png`;

const nonCover = finalFiles
  .map((file, i) => ({ file, src: galleryImages[i], i }))
  .filter((x) => x.file.toLowerCase() !== "cover-image.png");
---

<Layout title="Amplitude" description="Amplitude project">
  <main class="amp">
    <!-- HERO -->
    <section class="amp__hero">
      <div class="amp__grid amp__grid--hero">
        <!-- Cover -->
        <figure class="amp__card amp__heroImg">
          <button
            class="amp__imgBtn"
            type="button"
            data-lb-index={String(coverIndex >= 0 ? coverIndex : 0)}
          >
            <img src={coverSrc} alt="Cover image" />
          </button>
        </figure>

        <!-- Description -->
        <article class="amp__card amp__desc">
          <h1 class="amp__title">Amplitude</h1>
          <div class="amp__subtitle">{subtitle}</div>
          <div class="amp__body">{descriptionText}</div>
        </article>
      </div>
    </section>

    <!-- GALLERY -->
    <section class="amp__gallery">
      <div class="amp__grid amp__grid--gallery">
        {nonCover.map(({ src, i }) => (
          <figure class="amp__card amp__galleryImg">
            <button
              class="amp__imgBtn amp__imgBtn--full"
              type="button"
              data-lb-index={String(i)}
            >
              <img src={src} alt="" loading="lazy" />
            </button>
          </figure>
        ))}
      </div>
    </section>

    <!-- LIGHTBOX -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true">
        <button class="lb__close" data-lb-close>×</button>
        <button class="lb__nav" data-lb-prev>‹</button>

        <figure class="lb__figure">
          <img class="lb__img" id="lbImg" />
        </figure>

        <button class="lb__nav" data-lb-next>›</button>
      </div>
    </div>

    <script define:vars={{ galleryImages }} is:inline>
      (() => {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const img = document.getElementById("lbImg");
        let index = 0;

        const open = (i) => {
          index = i;
          img.src = images[index];
          lb.setAttribute("aria-hidden", "false");
          document.body.classList.add("lb-open");
        };

        const close = () => {
          lb.setAttribute("aria-hidden", "true");
          img.src = "";
          document.body.classList.remove("lb-open");
        };

        const show = (d) => {
          index = (index + d + images.length) % images.length;
          img.src = images[index];
        };

        document.addEventListener("click", (e) => {
          const btn = e.target.closest("[data-lb-index]");
          if (btn) return open(+btn.dataset.lbIndex);
          if (e.target.closest("[data-lb-close]")) return close();
          if (e.target.closest("[data-lb-next]")) return show(1);
          if (e.target.closest("[data-lb-prev]")) return show(-1);
        });

        document.addEventListener("keydown", (e) => {
          if (lb.getAttribute("aria-hidden") === "true") return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") show(1);
          if (e.key === "ArrowLeft") show(-1);
        });
      })();
    </script>

    <style>
      .amp {
        width: 80vw;
        max-width: 1400px;
        margin: 0 auto;
      }

      .amp__hero {
        min-height: 100svh;
        display: grid;
        align-items: stretch;
        background: rgba(0, 0, 0, 0.04);
        padding: 1rem 0;
      }

      .amp__gallery {
        background: #fff;
        padding: 1.5rem 0 2.5rem;
      }

      .amp__grid {
        display: grid;
        gap: 1.1rem;
      }

      .amp__grid--hero {
        grid-template-columns: 1fr 1fr;
        height: 100%;
      }

      .amp__grid--gallery {
        grid-template-columns: 1fr;
      }

      .amp__card {
        border: 1px solid rgba(0, 0, 0, 0.08);
        background: #fff;
        overflow: hidden;
      }

      .amp__heroImg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      .amp__desc {
        padding: 1.2rem;
      }

      .amp__title {
        margin: 0 0 0.4rem;
        font-size: clamp(1.6rem, 2.2vw, 2.2rem);
      }

      .amp__subtitle {
        font-size: 0.95rem;
        opacity: 0.7;
        margin-bottom: 1rem;
      }

      .amp__body {
        line-height: 1.65;
        white-space: pre-line;
      }

      .amp__imgBtn {
        all: unset;
        display: block;
        cursor: zoom-in;
      }

      .amp__imgBtn--full {
        padding: 0.75rem;
      }

      .amp__galleryImg img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
      }

      .lb {
        position: fixed;
        inset: 0;
        display: none;
        background: #fff;
        z-index: 9999;
      }

      .lb[aria-hidden="false"] {
        display: block;
      }

      .lb__panel {
        position: absolute;
        inset: 0;
        display: grid;
        grid-template-columns: 48px 1fr 48px;
        align-items: center;
      }

      .lb__figure {
        display: grid;
        place-items: center;
      }

      .lb__img {
        max-width: 90vw;
        max-height: 90vh;
        object-fit: contain;
      }

      .lb__close,
      .lb__nav {
        font-size: 2rem;
        background: #fff;
        border: 1px solid rgba(0, 0, 0, 0.15);
        cursor: pointer;
      }

      :global(body.lb-open) {
        overflow: hidden;
      }

      @media (max-width: 800px) {
        .amp__grid--hero {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </main>
</Layout>
