---
import Layout from "../../layouts/Layout.astro";
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Tini";
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const txtFile = "tini.txt";
const subtitle = "Tiny House Research Studio | Seattle, WA";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let imagesInFolder: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  imagesInFolder = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name);
} catch (err) {
  console.error("[Tini page] asset read error:", err);
}

/* ✅ EXACT order requested */
const orderedFiles = [
  "cover-image.webp",
  "Images-03.webp",
  "Images-04.webp",
  "Images-07.webp",
  "Images-05.webp",
  "Images-06.webp",
  "Images-08.webp",
  "Images-02.webp",
  "Images-09.webp",
  "Images-01.webp",
  "Images-11.webp",
];

/* Case-insensitive match */
const byLower = new Map(imagesInFolder.map((n) => [n.toLowerCase(), n]));
const finalFiles = orderedFiles
  .map((n) => byLower.get(n.toLowerCase()))
  .filter(Boolean) as string[];

const galleryImages = finalFiles.map((name) => `${BASE}/${encodeURIComponent(name)}`);

/* Cover */
const coverIndex = finalFiles.findIndex((f) => f.toLowerCase() === "cover-image.webp");
const coverSrc =
  coverIndex >= 0 ? galleryImages[coverIndex] : (galleryImages[0] ?? `${BASE}/cover-image.webp`);

/* Non-cover */
const nonCover = finalFiles
  .map((file, i) => ({ file, src: galleryImages[i], i }))
  .filter((x) => x.file.toLowerCase() !== "cover-image.webp");
---

<Layout title="Tini" description="Tini project">
  <main class="tini">
    <!-- HERO: cover + title/subtitle only (description stays below fold) -->
    <section class="tini__hero" aria-label="Tini hero">
      <div class="tini__inner">
        <!-- Cover (same “card” footprint feel as index carousel) -->
        <figure class="tini__cover" id="coverFigure">
          <button
            class="tini__imgBtn"
            type="button"
            data-lb-index={String(coverIndex >= 0 ? coverIndex : 0)}
            aria-label="Open cover image"
          >
            <img class="tini__img--cover" src={coverSrc} alt="Cover image" loading="eager" decoding="async" />
          </button>

          <!-- ✅ flip trigger: when this crosses top, cover is fully off-screen -->
          <div id="coverEnd" aria-hidden="true"></div>
        </figure>

        <!-- Title/subtitle BELOW image, left aligned to image -->
        <header class="tini__meta">
          <h1 class="tini__title">Tini</h1>
          <div class="tini__subtitle">{subtitle}</div>
        </header>

        <!-- Spacer pushes description off-screen until you scroll -->
        <div class="tini__heroSpacer" aria-hidden="true"></div>
      </div>
    </section>

    <!-- DESCRIPTION (appears only after you scroll) -->
    <section class="tini__desc" aria-label="Project description">
      <div class="tini__inner">
        {descriptionText ? (
          <div class="tini__body">{descriptionText}</div>
        ) : (
          <div class="tini__body tini__body--error">
            Couldn’t load <code>tini.txt</code><br />
            Expected: <code>public/projects/{FOLDER}/tini.txt</code>
          </div>
        )}
      </div>
    </section>

    <!-- GALLERY -->
    <section class="tini__gallery" aria-label="Tini gallery">
      <div class="tini__inner">
        <div class="tini__grid tini__grid--gallery">
          {nonCover.map(({ src, i }) => (
            <figure class="tini__galleryItem">
              <button
                class="tini__imgBtn tini__imgBtn--full"
                type="button"
                data-lb-index={String(i)}
                aria-label="Open image"
              >
                <img class="tini__img--full" src={src} alt="" loading="lazy" decoding="async" />
              </button>
            </figure>
          ))}
        </div>
      </div>
    </section>

    <!-- footer-trigger sentinel (near bottom) -->
    <div id="footerTrigger" aria-hidden="true"></div>

    <!-- Lightbox -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true" aria-label="Image viewer">
        <button class="lb__close" type="button" data-lb-close aria-label="Close">×</button>
        <button class="lb__nav lb__nav--prev" type="button" data-lb-prev aria-label="Previous">‹</button>

        <figure class="lb__figure">
          <div class="lb__stage">
            <img class="lb__img" id="lbImg" alt="" />
          </div>
        </figure>

        <button class="lb__nav lb__nav--next" type="button" data-lb-next aria-label="Next">›</button>
      </div>
    </div>

    <!-- Lightbox behavior -->
    <script define:vars={{ galleryImages }} is:inline>
      (function () {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const lbImg = document.getElementById("lbImg");

        let index = 0;
        let lastFocus = null;

        const isOpen = () => lb.getAttribute("aria-hidden") === "false";

        const setOpen = (open) => {
          lb.setAttribute("aria-hidden", open ? "false" : "true");
          document.documentElement.classList.toggle("lb-open", open);
          document.body.classList.toggle("lb-open", open);
        };

        const show = (i) => {
          index = (i + images.length) % images.length;
          lbImg.src = images[index];
        };

        const open = (i) => {
          lastFocus = document.activeElement;
          show(i);
          setOpen(true);
          const closeBtn = lb.querySelector(".lb__close");
          closeBtn && closeBtn.focus();
        };

        const close = () => {
          setOpen(false);
          lbImg.removeAttribute("src");
          if (lastFocus && typeof lastFocus.focus === "function") lastFocus.focus();
        };

        const next = () => show(index + 1);
        const prev = () => show(index - 1);

        document.addEventListener("click", (e) => {
          const t = e.target;

          const btn = t.closest?.("[data-lb-index]");
          if (btn) {
            const i = Number(btn.getAttribute("data-lb-index") || 0);
            if (!Number.isNaN(i)) open(i);
            return;
          }

          if (t.closest?.("[data-lb-close]")) return close();
          if (t.closest?.("[data-lb-next]")) return next();
          if (t.closest?.("[data-lb-prev]")) return prev();
        });

        document.addEventListener("keydown", (e) => {
          if (!isOpen()) return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") next();
          if (e.key === "ArrowLeft") prev();
        });
      })();
    </script>

    <!-- ✅ Background + nav style flip when cover image is fully off-screen -->
    <script is:inline>
      (function () {
        const end = document.getElementById("coverEnd");
        if (!end) return;

        const nav =
          document.querySelector("nav.topbar") ||
          document.querySelector("nav") ||
          document.querySelector("header nav");

        const setWhiteMode = (on) => {
          document.documentElement.classList.toggle("tini-white", on);
          document.body.classList.toggle("tini-white", on);
          if (nav) nav.classList.toggle("tini-white", on);
        };

        const update = () => {
          const r = end.getBoundingClientRect();
          // Flip once cover is completely off the viewport
          setWhiteMode(r.top <= 0);
        };

        const io = new IntersectionObserver(() => update(), { threshold: [0, 1] });
        io.observe(end);

        window.addEventListener("scroll", update, { passive: true });
        window.addEventListener("resize", update);
        requestAnimationFrame(update);
      })();
    </script>

    <!-- Footer turns white ONLY when you're at the bottom -->
    <script is:inline>
      (function () {
        const footer = document.querySelector("footer");
        const trigger = document.getElementById("footerTrigger");
        if (!footer || !trigger) return;

        const setFooterWhite = (on) => footer.classList.toggle("tini-footer-white", on);

        const io = new IntersectionObserver(([entry]) => setFooterWhite(entry.isIntersecting), { threshold: 0.01 });
        io.observe(trigger);
      })();
    </script>

    <style>
      /* --- Page-specific overrides: make Layout footer NOT fixed here --- */
      :global(footer) {
        position: static !important;
        left: auto !important;
        right: auto !important;
        bottom: auto !important;
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
        background: transparent !important;
        border-top: none !important;
      }

      :global(main) {
        padding-bottom: 0 !important;
      }

      /* Ensure navbar scrolls normally + no border */
      :global(nav),
      :global(nav.topbar) {
        position: static !important;
        top: auto !important;
        left: auto !important;
        right: auto !important;
        z-index: auto !important;
        border-bottom: none !important;
        box-shadow: none !important;
      }

      :global(nav.topbar .row),
      :global(nav .row) {
        border-bottom: none !important;
      }

      /* ---------------------------
         FULL PAGE background + variable text colors
         --------------------------- */
      :global(html),
      :global(body) {
        background: #121212 !important;
        transition: background 200ms ease;
      }

      :global(html) {
        --tini-fg: #ffffff;
        --tini-muted: rgba(255, 255, 255, 0.74);
        --tini-body: rgba(255, 255, 255, 0.78);
        --tini-border: rgba(255, 255, 255, 0.16);
      }

      :global(html.tini-white),
      :global(body.tini-white) {
        background: #ffffff !important;
      }

      :global(html.tini-white) {
        --tini-fg: #0b0b0b;
        --tini-muted: rgba(0, 0, 0, 0.62);
        --tini-body: rgba(0, 0, 0, 0.72);
        --tini-border: rgba(0, 0, 0, 0.12);
      }

      /* Keep navbar borderless in both states */
      :global(nav.tini-white),
      :global(nav.topbar.tini-white) {
        border-bottom: none !important;
        box-shadow: none !important;
      }

      /* Footer only becomes white when you're at bottom */
      :global(footer.tini-footer-white) {
        background: #ffffff !important;
        border-top: 1px solid rgba(0, 0, 0, 0.12) !important;
        color: #0b0b0b !important;
      }

      :global(footer.tini-footer-white a) {
        color: #0b0b0b !important;
      }

      /* ---------------------------
         PAGE WIDTH: match index “window/card” feel
         --------------------------- */
      .tini {
        width: 100%;
        margin: 0;
        padding-top: 2rem;
      }

      .tini__inner {
        width: min(100vw, clamp(320px, 78vw, 980px));
        margin-inline: auto;
      }

      /* ---------------------------
         HERO (no description visible until scroll)
         --------------------------- */
      .tini__hero {
        min-height: calc(100svh - 2rem);
        display: block;
        padding-bottom: 0;
      }

      .tini__inner {
        display: flex;
        flex-direction: column;
      }

      .tini__cover {
        margin: 0;
        border-radius: 0px;
        overflow: hidden;
        aspect-ratio: 16 / 9;
        border: 1px solid var(--tini-border);
        background: transparent;
      }

      .tini__imgBtn {
        display: block;
        width: 100%;
        height: 100%;
        padding: 0;
        border: 0;
        background: transparent;
        cursor: zoom-in;
      }

      .tini__img--cover {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        object-position: center;
        user-select: none;
        -webkit-user-drag: none;
      }

      #coverEnd {
        height: 1px;
        width: 100%;
      }

      .tini__meta {
        margin-top: 1.05rem;
      }

      .tini__title {
        margin: 0 0 0.45rem;
        font-size: clamp(1.6rem, 2.2vw, 2.15rem);
        letter-spacing: -0.02em;
        color: var(--tini-fg);
      }

      .tini__subtitle {
        font-size: 0.95rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        color: var(--tini-muted);
      }

      .tini__heroSpacer {
        flex: 1 1 auto;
        min-height: 24px;
      }

      /* ---------------------------
         DESCRIPTION (appears on scroll)
         --------------------------- */
      .tini__desc {
        padding: 0 0 2.25rem;
      }

      /* Re-declare inner as block for non-hero sections */
      .tini__desc .tini__inner,
      .tini__gallery .tini__inner {
        display: block;
      }

      .tini__body {
        white-space: pre-line;
        line-height: 1.65;
        font-size: 1rem;
        color: var(--tini-body);
      }

      .tini__body--error {
        opacity: 0.95;
      }

      /* ---------------------------
         GALLERY
         --------------------------- */
      .tini__gallery {
        padding: 1.5rem 0 3rem;
      }

      .tini__grid {
        display: grid;
      }

      .tini__grid--gallery {
        grid-template-columns: 1fr;
        gap: 1.4rem;
      }

      .tini__galleryItem {
        margin: 0;
        padding: 0;
        background: transparent;
        border: 0;
      }

      .tini__imgBtn--full {
        width: 100%;
        height: auto;
        padding: 0.75rem 0;
      }

      .tini__img--full {
        display: block;
        width: auto;
        height: auto;
        max-width: 100%;
        margin: 0 auto;
        object-fit: contain;
      }

      #footerTrigger {
        height: 1px;
        width: 100%;
      }

      /* ---------------------------
         Lightbox
         --------------------------- */
      .lb {
        position: fixed;
        inset: 0;
        display: none;
        z-index: 9999;
      }
      .lb[aria-hidden="false"] {
        display: block;
      }

      .lb__backdrop {
        position: absolute;
        inset: 0;
        background: #fff;
      }

      .lb__panel {
        position: absolute;
        inset: 0;
        display: grid;
        grid-template-columns: 56px 1fr 56px;
        align-items: center;
        padding: 2rem 1rem;
      }

      .lb__figure {
        margin: 0;
        height: 100%;
        display: grid;
        place-items: center;
      }

      .lb__stage {
        background: #fff;
        width: min(1100px, 92vw);
        height: 86vh;
        display: grid;
        place-items: center;
      }

      .lb__img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 0;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
      }

      .lb__close {
        position: absolute;
        top: 18px;
        right: 18px;
        width: 44px;
        height: 44px;
        border: 1px solid rgba(0, 0, 0, 0.15);
        background: rgba(255, 255, 255, 0.9);
        color: #111;
        font-size: 28px;
        line-height: 40px;
        border-radius: 999px;
        cursor: pointer;
      }

      .lb__nav {
        width: 44px;
        height: 64px;
        border: 1px solid rgba(0, 0, 0, 0.15);
        background: rgba(255, 255, 255, 0.9);
        color: #111;
        font-size: 40px;
        border-radius: 10px;
        cursor: pointer;
        user-select: none;
      }

      :global(html.lb-open),
      :global(body.lb-open) {
        overflow: hidden;
      }

      /* ---------------------------
         Mobile
         --------------------------- */
      @media (max-width: 640px) {
        .tini__inner {
          width: 100vw;
          padding-inline: 4vw;
        }

        .tini__cover {
          aspect-ratio: 9 / 16;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        :global(html),
        :global(body) {
          transition: none !important;
        }
      }
    </style>
  </main>
</Layout>
