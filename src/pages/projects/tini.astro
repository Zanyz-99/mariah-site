---
import Layout from "../../layouts/Layout.astro";
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Tini";
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const txtFile = "tini.txt";
const subtitle = "Tiny House Research Studio | Seattle, WA";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let imagesInFolder: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  imagesInFolder = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name);
} catch (err) {
  console.error("[Tini page] asset read error:", err);
}

/* ✅ EXACT order requested */
const orderedFiles = [
  "cover-image.png",
  "Images-03.png",
  "Images-04.png",
  "Images-07.png",
  "Images-05.png",
  "Images-06.png",
  "Images-08.png",
  "Images-02.png",
  "Images-09.png",
  "Images-01.png",
  "Images-11.png",
];

/* Case-insensitive match to filesystem */
const byLower = new Map(imagesInFolder.map((n) => [n.toLowerCase(), n]));
const finalFiles = orderedFiles
  .map((n) => byLower.get(n.toLowerCase()))
  .filter(Boolean) as string[];

const galleryImages = finalFiles.map((name) => `${BASE}/${encodeURIComponent(name)}`);

/* Cover logic */
const coverIndex = finalFiles.findIndex((f) => f.toLowerCase() === "cover-image.png");
const coverSrc =
  coverIndex >= 0 ? galleryImages[coverIndex] : (galleryImages[0] ?? `${BASE}/cover-image.png`);

/* Non-cover images (render below in order) */
const nonCover = finalFiles
  .map((file, i) => ({ file, src: galleryImages[i], i }))
  .filter((x) => x.file.toLowerCase() !== "cover-image.png");
---

<Layout title="Tini" description="Tini project">
  <main class="tini">
    <!-- HERO (dark) -->
    <section class="tini__hero" aria-label="Tini hero">
      <div class="tini__heroInner">
        <div class="tini__grid tini__grid--hero">
          <!-- Cover -->
          <figure class="tini__heroMedia" id="heroMedia">
            <button
              class="tini__imgBtn"
              type="button"
              data-lb-index={String(coverIndex >= 0 ? coverIndex : 0)}
              aria-label="Open cover image"
            >
              <img class="tini__img--hero" src={coverSrc} alt="Cover image" loading="eager" decoding="async" />
            </button>
          </figure>

          <!-- Description -->
          <article class="tini__heroText" id="heroText">
            <h1 class="tini__title">Tini</h1>
            <div class="tini__subtitle">{subtitle}</div>

            {descriptionText ? (
              <div class="tini__body">{descriptionText}</div>
            ) : (
              <div class="tini__body tini__body--error">
                Couldn’t load <code>tini.txt</code><br />
                Expected: <code>public/projects/{FOLDER}/tini.txt</code>
              </div>
            )}
          </article>
        </div>
      </div>
    </section>

    <!-- GALLERY (white begins here) -->
    <section class="tini__gallery" aria-label="Tini gallery">
      <div id="whiteStart" aria-hidden="true"></div>

      <div class="tini__galleryInner">
        <div class="tini__grid tini__grid--gallery">
          {nonCover.map(({ src, i }) => (
            <figure class="tini__galleryItem">
              <button
                class="tini__imgBtn tini__imgBtn--full"
                type="button"
                data-lb-index={String(i)}
                aria-label="Open image"
              >
                <img class="tini__img--full" src={src} alt="" loading="lazy" decoding="async" />
              </button>
            </figure>
          ))}
        </div>
      </div>
    </section>

    <!-- footer-trigger sentinel (near bottom) -->
    <div id="footerTrigger" aria-hidden="true"></div>

    <!-- Lightbox -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true" aria-label="Image viewer">
        <button class="lb__close" type="button" data-lb-close aria-label="Close">×</button>
        <button class="lb__nav lb__nav--prev" type="button" data-lb-prev aria-label="Previous">‹</button>

        <figure class="lb__figure">
          <div class="lb__stage">
            <img class="lb__img" id="lbImg" alt="" />
          </div>
        </figure>

        <button class="lb__nav lb__nav--next" type="button" data-lb-next aria-label="Next">›</button>
      </div>
    </div>

    <!-- Lightbox behavior -->
    <script define:vars={{ galleryImages }} is:inline>
      (function () {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const lbImg = document.getElementById("lbImg");

        let index = 0;
        let lastFocus = null;

        const isOpen = () => lb.getAttribute("aria-hidden") === "false";

        const setOpen = (open) => {
          lb.setAttribute("aria-hidden", open ? "false" : "true");
          document.documentElement.classList.toggle("lb-open", open);
          document.body.classList.toggle("lb-open", open);
        };

        const show = (i) => {
          index = (i + images.length) % images.length;
          lbImg.src = images[index];
        };

        const open = (i) => {
          lastFocus = document.activeElement;
          show(i);
          setOpen(true);
          const closeBtn = lb.querySelector(".lb__close");
          closeBtn && closeBtn.focus();
        };

        const close = () => {
          setOpen(false);
          lbImg.removeAttribute("src");
          if (lastFocus && typeof lastFocus.focus === "function") lastFocus.focus();
        };

        const next = () => show(index + 1);
        const prev = () => show(index - 1);

        document.addEventListener("click", (e) => {
          const t = e.target;

          const btn = t.closest?.("[data-lb-index]");
          if (btn) {
            const i = Number(btn.getAttribute("data-lb-index") || 0);
            if (!Number.isNaN(i)) open(i);
            return;
          }

          if (t.closest?.("[data-lb-close]")) return close();
          if (t.closest?.("[data-lb-next]")) return next();
          if (t.closest?.("[data-lb-prev]")) return prev();
        });

        document.addEventListener("keydown", (e) => {
          if (!isOpen()) return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") next();
          if (e.key === "ArrowLeft") prev();
        });
      })();
    </script>

    <!-- Background flip + navbar style flip when crossing into white section -->
    <script is:inline>
      (function () {
        const sentinel = document.getElementById("whiteStart");
        if (!sentinel) return;

        const nav =
          document.querySelector("nav.topbar") ||
          document.querySelector("nav") ||
          document.querySelector("header nav");

        const setWhiteMode = (on) => {
          document.documentElement.classList.toggle("tini-white", on);
          document.body.classList.toggle("tini-white", on);
          if (nav) nav.classList.toggle("tini-white", on);
        };

        const update = () => {
          const r = sentinel.getBoundingClientRect();
          setWhiteMode(r.top <= 0);
        };

        const io = new IntersectionObserver(() => update(), { threshold: [0, 1] });
        io.observe(sentinel);

        window.addEventListener("scroll", update, { passive: true });
        window.addEventListener("resize", update);

        requestAnimationFrame(update);
      })();
    </script>

    <!-- Footer turns white ONLY when you're at the bottom -->
    <script is:inline>
      (function () {
        const footer = document.querySelector("footer");
        const trigger = document.getElementById("footerTrigger");
        if (!footer || !trigger) return;

        const setFooterWhite = (on) => footer.classList.toggle("tini-footer-white", on);

        const io = new IntersectionObserver(([entry]) => setFooterWhite(entry.isIntersecting), { threshold: 0.01 });
        io.observe(trigger);
      })();
    </script>

    <!-- Match cover height to description height -->
    <script is:inline>
      (function () {
        const text = document.getElementById("heroText");
        if (!text) return;

        const set = () => {
          const h = Math.round(text.getBoundingClientRect().height);
          document.documentElement.style.setProperty("--tini-hero-h", h + "px");
        };

        set();
        window.addEventListener("load", set);
        window.addEventListener("resize", set);

        if ("ResizeObserver" in window) {
          const ro = new ResizeObserver(set);
          ro.observe(text);
        }
      })();
    </script>

    <style>
      /* --- Page-specific overrides: make Layout footer NOT fixed here --- */
      :global(footer) {
        position: static !important;
        left: auto !important;
        right: auto !important;
        bottom: auto !important;
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
        background: transparent !important;
        border-top: none !important;
      }

      :global(main) {
        padding-bottom: 0 !important;
      }

      :global(nav),
      :global(nav.topbar) {
        position: static !important;
        top: auto !important;
        left: auto !important;
        right: auto !important;
        z-index: auto !important;
        border-bottom: none !important;
        box-shadow: none !important;
      }

      :global(nav.topbar .row),
      :global(nav .row) {
        border-bottom: none !important;
      }

      .tini{
        width: 80%;
        max-width: 1400px;
        margin-inline: auto;
        padding-top: 2rem;
      }

      .tini__heroInner,
      .tini__galleryInner{
        width: 100%;
        margin: 0 auto;
      }

      .tini__grid{ display: grid; }

      /* HERO (dark, initial view only) */
      .tini__hero{
        color: #fff;
        min-height: calc(100svh - 2rem);
        max-height: calc(100svh - 2rem); /* keeps gallery hidden until scroll */
        display: flex;
        align-items: start;
      }

      .tini__grid--hero{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2.5rem;
        align-items: start;
        width: 100%;
      }

      /* natural text height */
      .tini__heroText{
        min-width: 0;
        overflow: visible;
        background: #121212;
        margin: 0;
        padding-right: 0;
        height: auto;
      }

      /* cover height matches text height */
      .tini__heroMedia{
        width: 100%;
        height: var(--tini-hero-h, auto);
        overflow: hidden;
        position: relative;
        isolation: isolate;
        background: #121212;
        margin: 0;
      }

      .tini__imgBtn{
        display: block;
        width: 100%;
        height: 100%;
        padding: 0;
        border: 0;
        background: transparent;
        cursor: zoom-in;
      }

      .tini__img--hero{
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        object-position: center;
      }

      .tini__title{
        margin: 0 0 0.45rem;
        font-size: clamp(1.6rem, 2.2vw, 2.15rem);
        letter-spacing: -0.02em;
        color: #fff;
      }

      .tini__subtitle{
        font-size: 0.95rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        margin-bottom: 0.9rem;
        color: rgba(255,255,255,0.74);
      }

      .tini__body{
        white-space: pre-line;
        line-height: 1.65;
        font-size: 1rem;
        color: rgba(255,255,255,0.78);
      }

      /* GALLERY (white) */
      .tini__gallery{
        padding: 1.5rem 0 3rem;
      }

      #whiteStart{ height: 1px; width: 100%; }

      .tini__grid--gallery{
        grid-template-columns: 1fr;
        gap: 1.4rem;
      }

      .tini__galleryItem{
        margin: 0;
        padding: 0;
        background: transparent;
        border: 0;
      }

      .tini__imgBtn--full{
        width: 100%;
        height: auto;
        padding: 0.75rem 0;
      }

      .tini__img--full{
        display: block;
        width: auto;
        height: auto;
        max-width: 100%;
        margin: 0 auto;
        object-fit: contain;
      }

      #footerTrigger{ height: 1px; width: 100%; }

      /* FULL PAGE background flip */
      :global(html),
      :global(body){
        background: #121212 !important;
        transition: background 200ms ease;
      }

      :global(html.tini-white),
      :global(body.tini-white){
        background: #ffffff !important;
      }

      :global(nav.tini-white),
      :global(nav.topbar.tini-white){
        border-bottom: none !important;
        box-shadow: none !important;
      }

      :global(footer.tini-footer-white){
        background: #ffffff !important;
        border-top: 1px solid rgba(0,0,0,0.12) !important;
        color: #0b0b0b !important;
      }

      /* Lightbox */
      .lb{
        position: fixed;
        inset: 0;
        display: none;
        z-index: 9999;
      }
      .lb[aria-hidden="false"]{ display: block; }

      .lb__backdrop{
        position: absolute;
        inset: 0;
        background: #fff;
      }

      .lb__panel{
        position: absolute;
        inset: 0;
        display: grid;
        grid-template-columns: 56px 1fr 56px;
        align-items: center;
        padding: 2rem 1rem;
      }

      .lb__figure{
        margin: 0;
        height: 100%;
        display: grid;
        place-items: center;
      }

      .lb__stage{
        background: #fff;
        width: min(1100px, 92vw);
        height: 86vh;
        display: grid;
        place-items: center;
      }

      .lb__img{
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 0;
        box-shadow: 0 12px 40px rgba(0,0,0,0.2);
      }

      .lb__close{
        position: absolute;
        top: 18px;
        right: 18px;
        width: 44px;
        height: 44px;
        border: 1px solid rgba(0,0,0,0.15);
        background: rgba(255,255,255,0.9);
        color: #111;
        font-size: 28px;
        line-height: 40px;
        border-radius: 999px;
        cursor: pointer;
      }

      .lb__nav{
        width: 44px;
        height: 64px;
        border: 1px solid rgba(0,0,0,0.15);
        background: rgba(255,255,255,0.9);
        color: #111;
        font-size: 40px;
        border-radius: 10px;
        cursor: pointer;
        user-select: none;
      }

      :global(html.lb-open),
      :global(body.lb-open){ overflow: hidden; }

      @media (max-width: 900px){
        .tini{ width: 100%; }

        .tini__grid--hero{
          grid-template-columns: 1fr;
          gap: 1.1rem;
        }

        .tini__hero{
          min-height: auto;
          max-height: none;
          display: block;
        }

        .tini__heroText{
          height: auto;
          overflow: visible;
          background: transparent;
          padding-right: 0;
        }

        .tini__heroMedia{
          height: auto;
          aspect-ratio: 4 / 3;
        }
      }
    </style>
  </main>
</Layout>
