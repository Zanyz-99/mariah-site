---
import Layout from "../../layouts/Layout.astro";
import { promises as fs } from "node:fs";
import path from "node:path";

const FOLDER = "Symbiosis";
const BASE = `/projects/${FOLDER}`;
const PUBLIC_DIR = path.join(process.cwd(), "public", "projects", FOLDER);

const txtFile = "symbiosis.txt";
const subtitle = "Housing Project | Rainier Beach (Seattle), WA";

const isImage = (name: string) => /\.(png|jpe?g|webp|avif|gif|svg)$/i.test(name);

let descriptionText = "";
let imagesInFolder: string[] = [];

try {
  descriptionText = await fs.readFile(path.join(PUBLIC_DIR, txtFile), "utf-8");

  const entries = await fs.readdir(PUBLIC_DIR, { withFileTypes: true });
  imagesInFolder = entries
    .filter((e) => e.isFile() && isImage(e.name))
    .map((e) => e.name);
} catch (err) {
  console.error("[Symbiosis page] asset read error:", err);
}

/* ✅ EXACT order requested:
   cover-image, Images_01, Images_02, Images_09, Images_03, Images_04, Images_10
*/
const orderedFiles = [
  "cover-image.png",
  "Images-01.png",
  "Images-02.png",
  "Images-09.png",
  "Images-03.png",
  "Images-04.png",
  "Images-10.png",
];

/* Case-insensitive match to filesystem */
const byLower = new Map(imagesInFolder.map((n) => [n.toLowerCase(), n]));
const finalFiles = orderedFiles
  .map((n) => byLower.get(n.toLowerCase()))
  .filter(Boolean) as string[];

const finalUrls = finalFiles.map((name) => `${BASE}/${encodeURIComponent(name)}`);
const galleryImages = finalUrls;

/* Cover logic */
const coverIndex = finalFiles.findIndex((f) => f.toLowerCase() === "cover-image.png");
const coverSrc =
  coverIndex >= 0 ? finalUrls[coverIndex] : finalUrls[0] ?? `${BASE}/cover-image.png`;

/* For grid rendering: top row uses cover + desc, then render the rest excluding cover */
const nonCover = finalFiles
  .map((file, i) => ({ file, src: finalUrls[i], i }))
  .filter((x) => x.file.toLowerCase() !== "cover-image.png");
---

<Layout title="Symbiosis" description="Symbiosis project">
  <main class="imm">
    <section class="imm__grid" aria-label="Symbiosis project grid">
      <!-- Top row LEFT: Cover image -->
      <figure class="imm__photo imm__card imm__photoCard">
        <button
          class="imm__imgBtn"
          type="button"
          data-lb-index={String(coverIndex >= 0 ? coverIndex : 0)}
          aria-label="Open cover image"
        >
          <img src={coverSrc} alt="Cover image" loading="eager" decoding="async" />
        </button>
      </figure>

      <!-- Top row RIGHT: Title + subtitle + description -->
      <article class="imm__desc imm__card" id="descBlock">
        <h1 class="imm__title">Symbiosis</h1>
        <div class="imm__subtitle">{subtitle}</div>

        {descriptionText ? (
          <div class="imm__body">{descriptionText}</div>
        ) : (
          <div class="imm__body imm__body--error">
            Couldn’t load <code>symbiosis.txt</code><br />
            Expected: <code>public/projects/{FOLDER}/symbiosis.txt</code>
          </div>
        )}
      </article>

      <!-- Follow-on rows: images in your exact requested order (excluding cover if present) -->
      {nonCover.map(({ src, i }) => (
        <figure class="imm__photo imm__card imm__photoCard">
          <button class="imm__imgBtn" type="button" data-lb-index={String(i)} aria-label="Open image">
            <img src={src} alt="" loading="lazy" decoding="async" />
          </button>
        </figure>
      ))}
    </section>

    <!-- Lightbox -->
    <div class="lb" id="lightbox" aria-hidden="true">
      <div class="lb__backdrop" data-lb-close></div>

      <div class="lb__panel" role="dialog" aria-modal="true" aria-label="Image viewer">
        <button class="lb__close" type="button" data-lb-close aria-label="Close">×</button>
        <button class="lb__nav lb__nav--prev" type="button" data-lb-prev aria-label="Previous">‹</button>

        <figure class="lb__figure">
          <div class="lb__stage">
            <img class="lb__img" id="lbImg" alt="" />
          </div>
        </figure>

        <button class="lb__nav lb__nav--next" type="button" data-lb-next aria-label="Next">›</button>
      </div>
    </div>

    <script define:vars={{ galleryImages }} is:inline>
      (function () {
        const images = galleryImages;
        const lb = document.getElementById("lightbox");
        const lbImg = document.getElementById("lbImg");

        let index = 0;
        let lastFocus = null;

        const isOpen = () => lb.getAttribute("aria-hidden") === "false";

        const setOpen = (open) => {
          lb.setAttribute("aria-hidden", open ? "false" : "true");
          document.documentElement.classList.toggle("lb-open", open);
          document.body.classList.toggle("lb-open", open);
        };

        const show = (i) => {
          index = (i + images.length) % images.length;
          lbImg.src = images[index];
        };

        const open = (i) => {
          lastFocus = document.activeElement;
          show(i);
          setOpen(true);
          const closeBtn = lb.querySelector(".lb__close");
          closeBtn && closeBtn.focus();
        };

        const close = () => {
          setOpen(false);
          lbImg.removeAttribute("src");
          if (lastFocus && typeof lastFocus.focus === "function") lastFocus.focus();
        };

        const next = () => show(index + 1);
        const prev = () => show(index - 1);

        document.addEventListener("click", (e) => {
          const t = e.target;

          const btn = t.closest?.("[data-lb-index]");
          if (btn) {
            const i = Number(btn.getAttribute("data-lb-index") || 0);
            if (!Number.isNaN(i)) open(i);
            return;
          }

          if (t.closest?.("[data-lb-close]")) return close();
          if (t.closest?.("[data-lb-next]")) return next();
          if (t.closest?.("[data-lb-prev]")) return prev();
        });

        document.addEventListener("keydown", (e) => {
          if (!isOpen()) return;
          if (e.key === "Escape") close();
          if (e.key === "ArrowRight") next();
          if (e.key === "ArrowLeft") prev();
        });
      })();
    </script>

    <!-- Height matching: set all photos to description block height -->
    <script is:inline>
      (function () {
        const desc = document.getElementById("descBlock");
        if (!desc) return;

        const setH = () => {
          const h = Math.round(desc.getBoundingClientRect().height);
          document.documentElement.style.setProperty("--imm-row-h", h + "px");
        };

        setH();
        window.addEventListener("load", setH);
        window.addEventListener("resize", setH);

        if ("ResizeObserver" in window) {
          const ro = new ResizeObserver(setH);
          ro.observe(desc);
        }
      })();
    </script>
  </main>

  <style>
    .imm {
      width: 80vw;
      max-width: 1400px;
      margin: 0 auto;
    }

    .imm__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.1rem;
      align-items: start;
    }

    .imm__card {
      border-radius: 0;
      overflow: hidden;
      background: rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .imm__desc {
      padding: 1.1rem 1.1rem 0.95rem;
      text-align: left;
    }

    .imm__title {
      margin: 0 0 0.45rem;
      font-size: clamp(1.6rem, 2.2vw, 2.15rem);
      letter-spacing: -0.02em;
    }

    .imm__subtitle {
      font-size: 0.95rem;
      font-weight: 500;
      letter-spacing: 0.02em;
      opacity: 0.75;
      margin-bottom: 0.9rem;
    }

    .imm__body {
      font: inherit;
      white-space: pre-line;
      line-height: 1.65;
      font-size: 1rem;
      opacity: 0.95;
    }

    /* Photos: height matches description block */
    .imm__photoCard {
      height: var(--imm-row-h, auto);
    }

    .imm__imgBtn {
      display: block;
      width: 100%;
      height: 100%;
      padding: 0;
      border: 0;
      background: transparent;
      cursor: zoom-in;
    }

    /* ✅ Match Amplitude behavior to avoid weird “zoom” feel */
    .imm__photo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    /* Lightbox background matches page to prevent "see-through" PNGs */
    .lb {
      position: fixed;
      inset: 0;
      display: none;
      z-index: 9999;
    }
    .lb[aria-hidden="false"] {
      display: block;
    }

    .lb__backdrop {
      position: absolute;
      inset: 0;
      background: var(--bg, #fff);
    }

    .lb__panel {
      position: absolute;
      inset: 0;
      display: grid;
      grid-template-columns: 56px 1fr 56px;
      align-items: center;
      padding: 2rem 1rem;
    }

    .lb__figure {
      margin: 0;
      height: 100%;
      display: grid;
      place-items: center;
    }

    .lb__stage {
      background: var(--bg, #fff);
      width: min(1100px, 92vw);
      height: 86vh;
      display: grid;
      place-items: center;
    }

    .lb__img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border-radius: 0;
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    }

    .lb__close {
      position: absolute;
      top: 18px;
      right: 18px;
      width: 44px;
      height: 44px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.9);
      color: #111;
      font-size: 28px;
      line-height: 40px;
      border-radius: 999px;
      cursor: pointer;
    }

    .lb__nav {
      width: 44px;
      height: 64px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      background: rgba(255, 255, 255, 0.9);
      color: #111;
      font-size: 40px;
      border-radius: 10px;
      cursor: pointer;
      user-select: none;
    }

    :global(html.lb-open),
    :global(body.lb-open) {
      overflow: hidden;
    }

    @media (max-width: 800px) {
      .imm__grid {
        grid-template-columns: 1fr;
      }
      .imm__photoCard {
        height: auto;
      }
      .imm__photo img {
        height: auto;
      } /* ✅ same as Amplitude */
      .lb__panel {
        grid-template-columns: 44px 1fr 44px;
        padding: 1.25rem 0.75rem;
      }
      .lb__stage {
        height: 84vh;
      }
    }
  </style>
</Layout>
